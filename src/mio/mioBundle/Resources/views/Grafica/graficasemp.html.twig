{% extends 'miomioBundle:Default:index.html.twig' %}

{% block graficas %}
<script type="text/javascript" language="javascript" src="{{ asset('bundles/miomio/js/highcharts.js') }}"></script>
<script type="text/javascript" language="javascript" src="{{ asset('bundles/miomio/js/highstock.js') }}"></script>
<script type="text/javascript" language="javascript" src="{{ asset('bundles/miomio/js/exporting.js') }}"></script>

{% if app.request.locale == 'en' %}

         {% javascripts '@miomioBundle/Resources/public/js/mio/graficas/ingles/*' filter='yui_js' output='js/graficasingles.js' %}
        {% endjavascripts %}
        <script type="text/javascript" language="javascript" src="{{ asset('js/graficasingles.js') }}"></script>

	{% else %}

         {% javascripts '@miomioBundle/Resources/public/js/mio/graficas/espanol/*' filter='yui_js' output='js/graficas.js' %}
        {% endjavascripts %}
        <script type="text/javascript" language="javascript" src="{{ asset('js/graficas.js') }}"></script>

	{% endif %}
	
{% endblock %}

{% block title %}{% trans %}Estadísticas del empleado{% endtrans %}{% endblock %}

