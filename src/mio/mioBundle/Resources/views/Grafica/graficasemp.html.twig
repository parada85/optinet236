		<li><a href="#emptabs-1">{% trans %}Número de operaciones{% endtrans %}</a></li>
		<li><a href="#emptabs-2">{% trans %}Facturación{% endtrans %}</a></li>
	</ul>
	<div id="emptabs-1">
		<div id="empcontainer"></div>
	</div>
	<div id="emptabs-2">
		<div id="empcontainer1"></div>
	</div>
</div>
{% endblock %}